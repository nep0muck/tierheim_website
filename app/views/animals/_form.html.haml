.row
    = simple_form_for @animal, html: { multipart: true } do |f|
        - if @animal.errors.any?
            #errors
                %h2 
                = pluralize(@animal.errors.count, "error")
                prevented this Animal from saving
                %ul
                    - @animal.errors.full_messages.each do |msg|
                        %li= msg
        .col-md-12                
            .form-group
                = f.input :name, input_html: { class: 'form-control' }
            
            .form-group
                = f.input :image, input_html: { class: 'form-control' }
                
            // .form-group
            //     = file_field_tag "images[]", type: :file, multiple: true
                
        .col-md-4
            %table
                %tr
                    %td
                        .form-group
                            = f.input :type_of_animal, input_html: { class: 'form-control' }
                            
                %tr
                    %td
                        .form-group
                            = f.input :race, input_html: { class: 'form-control' }
                
                %tr
                    %td
                        .form-inline
                            = f.date_select :arrived_at, { :order => [:day, :month, :year] }, {:class => "form-control"}
        .col-md-8        
            .form-group
                = f.input :description, input_html: { class: 'form-control', :rows => 20 }
    
        .col-md-12
            = f.button :submit, class: 'btn btn-primary'